void TestSuite::test3()
{
    using Frame = Frame3;
    Frame frame;
    static const std::uint8_t Buf[] = {1, 0, 0};
    static const std::size_t BufSize = std::extent<decltype(Buf)>::value;
    auto readIter = comms::readIteratorFor<Interface>(&Buf[0]);
